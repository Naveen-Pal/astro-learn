---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Projects";

const projects = [
    {
        title: "Project One",
        description: "This is a brief description of project one. It involves working on various web technologies to create a dynamic and responsive web application.",
        links: [
            { name: "GitHub", url: "https://github.com/project-one" },
            { name: "Live Demo", url: "https://project-one-demo.com" },
        ],
    },
    {
        title: "Project Two",
        description: "This is a brief description of project two. The focus is on developing a mobile application with innovative features and a user-friendly interface.",
        links: [
            { name: "GitHub", url: "https://github.com/project-two" },
            { name: "Live Demo", url: "https://project-two-demo.com" },
        ],
    },
    // Add more projects as needed
];
---

<BaseLayout pageTitle={pageTitle}>
    <style>
        .container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }
        .page-top {
            text-align: center;
            margin-bottom: 2rem;
        }
        .page-top h1 {
            font-size: 2.5rem;
            margin: 0;
            color: #333;
        }
        .project {
            margin-bottom: 2rem;
        }
        .project h2 {
            font-size: 2rem;
            margin: 0 0 0.5rem 0;
            color: #444;
        }
        .project p {
            font-size: 1.1rem;
            line-height: 1.5;
            margin: 0 0 1rem 0;
            color: #555;
        }
        .project-links {
            display: flex;
            gap: 1rem;
        }
        .project-links a {
            text-decoration: none;
            color: #007acc;
            font-weight: bold;
            transition: color 0.3s;
        }
        .project-links a:hover {
            color: #005fa3;
        }
    </style>

    <div class="container">
        <div class="page-top">
            <h1>{pageTitle}</h1>
        </div>

        {projects.map((project) => (
            <div class="project">
                <h2>{project.title}</h2>
                <p>{project.description}</p>
                <div class="project-links">
                    {project.links.map((link) => (
                        <a href={link.url} target="_blank" rel="noopener noreferrer">
                            {link.name}
                        </a>
                    ))}
                </div>
            </div>
        ))}
    </div>
</BaseLayout>
