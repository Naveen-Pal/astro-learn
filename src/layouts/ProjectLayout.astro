---
import BaseLayout from "./BaseLayout.astro";

const {frontmatter} = Astro.props;
---

<BaseLayout>
  <div class="project-box">
    <img src={frontmatter.image} alt={frontmatter.title} class="project-image"/>
    <div class="project-content">
      <h1>{frontmatter.title}</h1>
      <p>{frontmatter.description}</p>
      <div class="project-buttons">
        <a href={frontmatter.link} target="_blank" rel="noopener noreferrer">
          <button class="button">Live Demo</button>
        </a>
        <a href={frontmatter.github} target="_blank" rel="noopener noreferrer">
          <button class="button">GitHub Page</button>
        </a>
      </div>
      <slot/>
    </div>
  </div>
</BaseLayout>

<style>
  .project-box {
    display: flex;
    border: 1px solid #ccc;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    max-width: 800px;
    margin: auto;
    background-color: #fff;
  }
  
  .project-image {
    max-width: 150px;
    margin-right: 20px;
    border-radius: 8px;
    object-fit: contain;
  }

  .project-content {
    flex: 1;
  }
  
  .project-buttons {
    margin-top: 20px;
  }

  .button {
    display: inline-block;
    padding: 10px 20px;
    margin-right: 10px;
    background-color: #007BFF;
    color: #fff;
    border: none;
    border-radius: 4px;
    text-decoration: none;
    font-size: 16px;
    cursor: pointer;
  }
  
  .button:hover {
    background-color: #0056b3;
  }
</style>
